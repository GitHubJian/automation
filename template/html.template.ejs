<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= htmlWebpackPlugin.options.title %></title>
    <% if (htmlWebpackPlugin.options.vendor) { %>
        <link rel="stylesheet" href="<%= htmlWebpackPlugin.options.vendor.css %>">
    <% } %>
</head>
<body>

<div id="app">
    <div class="el-loading-mask is-fullscreen" style="display: block;">
        <div class="el-loading-spinner">
            <svg viewBox="25 25 50 50" class="circular">
                <circle cx="50" cy="50" r="20" fill="none" class="path"></circle>
            </svg>
            <p class="el-loading-text">正在加载</p>
        </div>
    </div>
</div>

<% if (htmlWebpackPlugin.options.extra.script) { %>
    <% if(Array.isArray(htmlWebpackPlugin.options.extra.script)) { %>
        <% htmlWebpackPlugin.options.extra.script.forEach(function (item) { %>
            <script src="<%= item %>"></script>
        <% }); %>
    <% } else { %>
        <script src="<%= htmlWebpackPlugin.options.extra.script %>"></script>
    <% } %>
<% } %>

</body>
</html>